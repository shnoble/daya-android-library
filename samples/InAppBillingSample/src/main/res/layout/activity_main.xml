<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.toast.android.iab.sample.MainActivity">

    <Button
        android:id="@+id/query_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매할 수 있는 아이템 쿼리"/>

    <Button
        android:id="@+id/purchase_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이템 구매"/>

    <Button
        android:id="@+id/query_purchased_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매 아이템 쿼리"/>

    <Button
        android:id="@+id/consume_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매 소비"/>

</LinearLayout>
