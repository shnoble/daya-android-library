<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.daya.android.onestore.v17.sample.MainActivity">

    <Button
        android:id="@+id/query_product_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Query Product Detail"/>

    <Button
        android:id="@+id/purchase_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purchase Product"/>

    <Button
        android:id="@+id/query_purchases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Query Purchases"/>

    <Button
        android:id="@+id/consume_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consume Purchase"/>

</LinearLayout>
